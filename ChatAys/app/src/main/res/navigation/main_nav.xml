<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/googleLoginFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.chatays.fragment.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/signup_to_person"
            app:destination="@id/personsFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.chatays.fragment.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/login_to_signup"
            app:destination="@id/signUpFragment" />

        <action
            android:id="@+id/login_to_person"
            app:destination="@id/personsFragment" />
        <action
            android:id="@+id/login_to_talks"
            app:destination="@id/talksFragment" />
    </fragment>
    <fragment
        android:id="@+id/personsFragment"
        android:name="com.example.chatays.fragment.PersonsFragment"
        android:label="PersonsFragment"
        tools:layout="@layout/fragment_persons">
        <action
            android:id="@+id/person_to_chat"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.chatays.fragment.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/settings_to_talks"
            app:destination="@id/talksFragment" />
        <action
            android:id="@+id/settings_to_login"
            app:destination="@id/loginFragment" />
        <argument
            android:name="imageUrl"
            app:argType="string" />
        <argument
            android:name="username"
            app:argType="string" />
        <argument
            android:name="email"
            app:argType="string" />
        <action
            android:id="@+id/setting_to_googlelogin"
            app:destination="@id/googleLoginFragment" />
    </fragment>
    <fragment
        android:id="@+id/talksFragment"
        android:name="com.example.chatays.fragment.TalksFragment"
        android:label="TalksFragment"
        tools:layout="@layout/fragment_talks">
        <action
            android:id="@+id/talks_to_chat"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/talks_to_person"
            app:destination="@id/personsFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.chatays.fragment.ChatFragment"
        android:label="ChatFragment"
        tools:layout="@layout/fragment_chat">
        <argument
            android:name="imageUrl"
            app:argType="string" />
        <argument
            android:name="username"
            app:argType="string" />
        <action
            android:id="@+id/chat_to_talks"
            app:destination="@id/talksFragment" />
    </fragment>
    <fragment
        android:id="@+id/googleLoginFragment"
        android:name="com.example.chatays.fragment.GoogleLoginFragment"
        android:label="GoogleLoginFragment"
        tools:layout="@layout/fragment_google_login">
        <action
            android:id="@+id/google_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/googlelogin_to_talks"
            app:destination="@id/talksFragment" />
        <action
            android:id="@+id/googlelogin_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>
</navigation>
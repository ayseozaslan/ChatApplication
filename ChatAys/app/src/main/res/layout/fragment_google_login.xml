<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data >
        <variable
            name="googleloginfragment"
            type="com.example.chatays.fragment.GoogleLoginFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="416dp"
            android:layout_height="336dp"
            android:src="@drawable/green_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView_log2"
            android:layout_width="149dp"
            android:layout_height="104dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tetx_title2"
            app:srcCompat="@drawable/login_signup_iconn" />

        <TextView
            android:id="@+id/tetx_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:text="ChatAys"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginGoogle"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="311dp"
            android:layout_height="64dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/button_backgroundgoogle"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Google ile giriş yapın"
            android:textAllCaps="false"
            android:textColor="#020202"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:icon="@drawable/google"
            app:iconGravity="start"
            app:iconPadding="4dp"
            app:iconSize="30dp"
            app:iconTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/loginEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginEmail"
            android:layout_width="311dp"
            android:layout_height="64dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="200dp"
            android:backgroundTint="#58CD36"
            android:fontFamily="sans-serif"
            android:onClick="@{ () -> googleloginfragment.navigateToLogin()}"
            android:text="E posta ile giriş yap"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:icon="@drawable/email"
            app:iconGravity="start"
            app:iconPadding="4dp"
            app:iconSize="30dp"
            app:iconTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginGoogle" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Oturum Açın"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_log2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>